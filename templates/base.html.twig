<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Wir trauen uns{% endblock %}</title>
    <link rel="icon" href="/favicon.png" sizes="48x48" >
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% block body %}
            {% if invitation is defined %}
                <header>
                    <nav id="navbar-example2" class="navbar navbar-expand-lg navbar-dark fixed-top bg-primary navbar-collapse">
                        <div class="container-fluid">
                            <a class="navbar-brand" href="#">
                                <h1 class="cover-heading">Susanna & Dennis</h1>
                            </a>

                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#navbarSupportedContent"
                                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav ms-auto">
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('promise', {id: invitation.id}) }}#scrollspyHeading1">Details</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('promise', {id: invitation.id}) }}#scrollspyHeading2">Zusage</a>
                                    </li>
                                    {% if date("2025-05-28 00:00:01.000000")|date('m/d/Y')  <= 'now'|date('m/d/Y') %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('promise', {id: invitation.id}) }}#scrollspyHeading3">Bilder
                                            hochladen</a>
                                    </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('gallery', {id: invitation.id}) }}">Gallery</a>
                                        </li>
                                    {% endif %}

                                </ul>
                            </div>
                        </div>
                    </nav>
                </header>
            {% endif %}
            <main role="main" >
                {% block covercontent %}{% endblock %}
            </main>

{% endblock %}
</body>
</html>
